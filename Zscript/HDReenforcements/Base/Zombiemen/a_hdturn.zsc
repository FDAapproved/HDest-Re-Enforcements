extend class HDREZombieman
{

	virtual void A_HDTurn()
	{
		// when they forgor. 
		if(!target)
		{
			a_HDForget();
		}
		else
		{
			double targetdistance = distance3d(target);
			
			if(targetdistance<200)
				turnamount=50;
			else if(targetdistance<600)
				turnamount=30;
			else
				turnamount=10;
		}
		
		A_FaceTarget(turnamount, turnamount);
	}
}